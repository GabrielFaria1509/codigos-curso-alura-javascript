alert("Boas vindas ao jogo do número secreto");     //passa uma mensagem  //alert para mostrar uma mensagem ao usuário sem esperar uma resposta

let numeroSecreto = 4;                               //deixa um espaço na memória pra armazenar uma variável

console.log(numeroSecreto);                         //console é uma ferramenta para desenvolvedores , não para usuários

let chute;          //deixo espaçi na memória reservado

chute = prompt("Escolha um número entre 1 e 10");   //dá uma mensagem aoa abir a aba do navegador  //uso prompt quando quero solicitar uma entrada de dados

while(chute != numeroSecreto){
     
console.log("Valor do chute : ",chute);        //verifica valor do chute //logo posso usar vírgula pra juntar texto e variável

console.log("Resultado da comparação : ",chute==numeroSecreto);

    if(chute < numeroSecreto){
        alert(`O numero secreto é maior que ${chute}`);
        console.log("Verificar valor do número secreto em caso do player errar",numeroSecreto);
    }
    else{
        alert(`O numero secreto é menor que ${chute}`);
        console.log("Verificar valor do número secreto em caso do player errar",numeroSecreto);

    }
    
    alert("Você errou :(");

    chute = prompt("Escolha um número entre 1 e 10");

}
if(chute == numeroSecreto){
    alert("Isso aí ! Você acertou o número secreto !");
}
 


 
